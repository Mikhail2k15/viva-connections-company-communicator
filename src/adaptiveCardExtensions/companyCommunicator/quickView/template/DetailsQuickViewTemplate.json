{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [                    
    {
        "type": "TextBlock",                           
        "weight": "Bolder",
        "text": "${title}",
        "wrap": true,
        "color": "accent"
    },
    {
      "type": "Image",
      "url": "${imageLink}"
    },      
    {
      "type": "TextBlock",
      "text": "${summary}",        
      "wrap": true
    },
    {
      "type": "TextBlock",
      "separator": true,
      "wrap": true,
      "size": "Small",
      "weight": "Lighter",
      "text": "${author}"
    }
  ]      
}